<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragment.ModeFragment">

    <LinearLayout
        android:id="@+id/timer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subject_input"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer_hour_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/sub_headline"
            android:text="30"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/sub_headline"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text=":"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer_min_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/sub_headline"
            android:text="00"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/sub_headline"
            android:text=":"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer_second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/sub_headline"
            android:text="00"
            />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/subject_input"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/sub_headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_layout"
        app:layout_constraintBottom_toTopOf="@id/point_input"
        android:hint="국어"
        android:textColor="#333333"
        android:textColorHint="#999999"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/point_input"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/sub_headline"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subject_input"
        android:hint="점수"
        android:textColor="#333333"
        android:textColorHint="#999999"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mock_start_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/UPlus.Button.Contained"
        android:textAppearance="@style/sub_headline"
        android:text="시작"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mock_pause_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/UPlus.Button.Contained"
        android:textAppearance="@style/sub_headline"
        android:text="일시중지"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mock_start_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mock_stop_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/UPlus.Button.Contained"
        android:textAppearance="@style/sub_headline"
        android:text="종료"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mock_pause_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>