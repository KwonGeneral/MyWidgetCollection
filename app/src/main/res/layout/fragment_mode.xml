<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragment.ModeFragment">

    <LinearLayout
        android:id="@+id/timer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer_hour_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textAppearance="@style/sub_headline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text=":"
            android:textAppearance="@style/sub_headline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer_min_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textAppearance="@style/sub_headline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text=":"
            android:textAppearance="@style/sub_headline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timer_second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textAppearance="@style/sub_headline" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/now_subject_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timer_layout"
        android:layout_marginTop="20dp"
        android:text="현재 과목"
        style="@style/sub_headline"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mock_start_btn"
        style="@style/UPlus.Button.Contained"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="시작"
        android:textAppearance="@style/sub_headline"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mock_pause_btn"
        tools:layout_editor_absoluteY="562dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mock_pause_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/UPlus.Button.Contained"
        android:textAppearance="@style/sub_headline"
        android:text="일시중지"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mock_stop_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/UPlus.Button.Contained"
        android:textAppearance="@style/sub_headline"
        android:text="종료"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mock_pause_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>