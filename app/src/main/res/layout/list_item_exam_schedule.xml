<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_exam_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_contained_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exam_schedule_period"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1교시"
                style="@style/item_sub_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/exam_schedule_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="국어"
                android:text="국어"
                style="@style/item_sub_title"
                android:textAlignment="textStart"
                android:background="@drawable/background_edit"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColorHint="#999999"
                app:layout_constraintStart_toEndOf="@id/exam_schedule_period"
                app:layout_constraintEnd_toStartOf="@id/exam_schedule_time_point"
                app:layout_constraintTop_toTopOf="@id/exam_schedule_period" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/exam_schedule_time_point"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:hint="8000"
                android:text="8000"
                style="@style/item_sub_title"
                android:textAlignment="center"
                android:background="@drawable/background_edit"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="#999999"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>