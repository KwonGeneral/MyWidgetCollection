<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="30dp"
    tools:context=".fragment.ScheduleFragment">

    <LinearLayout
        android:id="@+id/today_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/today_normal_search_btn"
            android:layout_marginStart="20dp"
            style="@style/UPlus.Button.Contained"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:text="일반 검색"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/today_page_search_btn"
            android:layout_marginStart="20dp"
            style="@style/UPlus.Button.Contained"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:text="페이징 검색"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/today_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 일정"
        style="@style/sub_headline"
        app:layout_constraintTop_toBottomOf="@id/today_btn_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/today_recycler"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/today_shuffle"
        style="@style/UPlus.Button.Contained"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="@id/today_text"
        app:layout_constraintBottom_toBottomOf="@id/today_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="일정 셔플"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/today_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/today_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/todo_text">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/todo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 할일"
        style="@style/sub_headline"
        app:layout_constraintTop_toBottomOf="@id/today_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/todo_recycler"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/todo_shuffle"
        style="@style/UPlus.Button.Contained"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="@id/todo_text"
        app:layout_constraintBottom_toBottomOf="@id/todo_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="할일 셔플"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todo_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toBottomOf="@id/todo_text">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>