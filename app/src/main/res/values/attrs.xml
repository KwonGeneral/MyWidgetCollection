<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BottomNavigationContainer">
        <attr name="nv_text_styles" format="reference"/>
        <attr name="nv_item_selector" format="reference"/>
        <attr name="nv_orientation" format="string"/>
    </declare-styleable>

    <declare-styleable name="BottomNavigationItem">
        <attr name="nv_image_src" format="reference" />
        <attr name="nv_text" format="string" />
        <attr name="nv_action" format="string" />
    </declare-styleable>

    <declare-styleable name="LinearTapContainer">
        <attr name="lt_title_styles" format="reference"/>
        <attr name="lt_content_styles" format="reference"/>
        <attr name="lt_item_selector" format="reference"/>
        <attr name="lt_orientation" format="string"/>
    </declare-styleable>

    <declare-styleable name="LinearTapItem">
        <attr name="lt_title" format="string" />
        <attr name="lt_content" format="string" />
        <attr name="lt_action" format="string" />
    </declare-styleable>

</resources>