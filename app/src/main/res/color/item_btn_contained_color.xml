<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused -->
    <item android:state_focused="true" android:state_enabled="true" android:color="@color/focused_black" />

    <!-- Pressed -->
    <item android:state_pressed="true" android:state_enabled="true" android:color="@color/pressed_black"/>

    <!-- Disabled -->
    <item android:state_enabled="false" android:state_pressed="false" android:state_focused="false" android:color="@color/disabled_black" />

    <!-- Default -->
    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="false" android:color="@color/normal_black" />
</selector>